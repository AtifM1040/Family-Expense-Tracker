<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme for Material 3 -->
    <style name="Base.Theme.FamEx" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material 3 Color System - Dark Theme -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/dark_green</item>
        <item name="colorOnPrimaryContainer">@color/light_green</item>

        <item name="colorSecondary">@color/red_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/dark_red</item>
        <item name="colorOnSecondaryContainer">@color/light_red</item>

        <item name="colorTertiary">@color/purple_200</item>
        <item name="colorOnTertiary">@color/black</item>

        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/black</item>

        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/surface_dark</item>
        <item name="colorOnSurfaceVariant">@color/text_light</item>

        <item name="colorOutline">@color/text_medium</item>
        <item name="colorOutlineVariant">@color/text_dark</item>
    </style>
</resources>